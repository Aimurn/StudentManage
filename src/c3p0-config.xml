<?xml version='1.0' encoding='UTF-8'?>
<c3p0-config>
    <!-- 默认配置  创建连接池对象时，默认是加载该配置信息-->
    <default-config>
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/j24_javaweb?characterEncoding=utf-8</property>
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>
        <property name="user">root</property>
        <property name="password">123456</property>
        <!-- 池参数 -->
        <property name="acquireIncrement">5</property>
        <property name="initialPoolSize">50</property>
        <property name="minPoolSize">2</property><!--连接池中保留的最少连接数。-->
        <property name="maxPoolSize">60</property><!--连接池中保留的最大连接数。-->
        <property name="maxIdleTime">60</property><!--最大空闲时间-->

</default-config>
</c3p0-config>